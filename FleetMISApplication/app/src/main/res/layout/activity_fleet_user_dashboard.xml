<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.dashboard.FleetUsersDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="16dp" />

        <!-- Pending Requests -->
        <TextView
            android:id="@+id/txtPendingRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Requests: 0"
            android:textSize="16sp"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="8dp" />

        <!-- Approved Requests -->
        <TextView
            android:id="@+id/txtApprovedRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved Requests: 0"
            android:textSize="16sp"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="8dp" />

        <!-- Completed Trips -->
        <TextView
            android:id="@+id/txtTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Trips: 0"
            android:textSize="16sp"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="16dp" />

        <!-- Request Vehicle -->
        <Button
            android:id="@+id/btnRequestVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Vehicle"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <!-- Track Requests -->
        <Button
            android:id="@+id/btnTrackRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track My Requests"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
