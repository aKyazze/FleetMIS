<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txtDestination" android:text="Destination:" android:textStyle="bold" />
        <TextView android:id="@+id/txtStatus" android:text="Status:" />
        <TextView android:id="@+id/txtVehicle" android:text="Vehicle:" />
        <TextView android:id="@+id/txtDriver" android:text="Driver:" />
        <TextView android:id="@+id/txtDriverContact" android:text="Driver Contact:" />
        <TextView android:id="@+id/txtDates" android:text="Dates:" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
